QPushButton{
	background: rgb(51, 133, 255);
	color: white;
	border-style: outset;
	border-width: 1px;
	border-radius: 5px;
	border-color: white;
	padding: 10px;
}

QPushButton::hover{
	background: rgb(49, 126, 243);
	border-color: white;
}

QPushButton::pressed{
	background: rgb(48, 117, 220);
	border-color: white;
	border-style: inset;
}

QPushButton::disabled{
	background: rgb(130, 137, 151);
	border-color: white;
	border-style: outset;
}


