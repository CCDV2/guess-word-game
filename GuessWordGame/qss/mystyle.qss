QTabWidget::pane { /* The tab widget frame */
	border: 5px solid;
	border-top-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
									stop: 0 rgb(227, 179, 72),
									stop: 1 rgb(150, 195, 236));
	border-left-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
									  stop: 0 rgb(227, 179, 72),
									  stop: 1 rgb(150, 195, 236));
	border-right-color: qlineargradient(x1: 1, y1: 0, x2: 0, y2: 0,
									stop: 0 rgb(227, 179, 72),
									stop: 1 rgb(150, 195, 236));
	border-bottom-color: qlineargradient(x1: 0, y1: 1, x2: 0, y2: 0,
									  stop: 0 rgb(227, 179, 72),
									  stop: 1 rgb(150, 195, 236));
}

